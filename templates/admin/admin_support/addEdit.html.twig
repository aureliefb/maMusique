{% extends 'base.html.twig' %}

{% block title %}Admin - Supports{% endblock %}
{% block body %}
    {% if app.request.attributes.get('_route') == 'admin_add_support' %}
        {% set titre_page = 'Ajouter' %}
        {% set btn_valid = 'Ajouter' %}
    {% elseif app.request.attributes.get('_route') == 'admin_edit_support' %}
        {% set titre_page = 'Modifier' %}
        {% set btn_valid = 'Modifier' %}
    {% endif %}

    <div class="container col-12">
        <div class="row my-4">
            <div class="col-2"><a type="button" class="btn btn-secondary btn-sm" href="{{ path('admin_support') }}">Retour</a></div>
            <div class="col-8"><h1 class="text-center">{{ titre_page }} un support</h1></div>
        </div>
        <div class="d-flex justify-content-center">
            {{ form_start(formSupport, {'attr':{'novalidate':'novalidate'}}) }}
                <div class="col-12">{{ form_row(formSupport.support) }}</div>
                <a href="{{ path('admin_support') }}" class="btn btn-secondary btn-sm">Annuler</a>
                <button type="submit" class="btn btn-primary btn-sm">{{ btn_valid }}</button>
            {{ form_end(formSupport) }}
        </div>
    </div>

{% endblock %}
