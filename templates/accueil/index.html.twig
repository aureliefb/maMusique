{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Accueil{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="text-center my-4">Bienvenue sur <small class="text-muted"><i>M@ Musique</i></small></h1>
        <ul class="lead text-center my-5 list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-center align-items-center"><a href="{{ path('artistes') }}">Mes artistes & groupes</a> &nbsp<span class="badge bg-primary rounded-pill">{{ nbArtists }}</span></li>
            <li class="list-group-item d-flex justify-content-center align-items-center"><a href="">Mes concerts</a> &nbsp<span class="badge bg-primary rounded-pill">{{ nbConcerts }}</span></li>
            <li class="list-group-item d-flex justify-content-center align-items-center"><a href="{{ path('albums') }}">Mes albums</a> &nbsp;<span class="badge bg-primary rounded-pill">{{ nbAlbums }}</span></li>
        </ul>
    </div>

    <div class="container my-5 d-flex justify-content-center">
      
        <div class="card col-12 text-dark bg-light border-warning">
          <div class="row m-1">

            <div class="card-body col-sm-12 col-md-5 d-flex justify-content-center align-items-start">
              <img style="height:60%;" src="{{ asset('/images/artists/dido.jpg') }}" class="img-fluid rounded" alt="photo artiste ou couverture album">
            </div>

            <div class="col-sm-12 col-md-7 d-flex flex-column">
              <div class="card-body flex-grow-1">
                <h5 class="card-title">Artiste ou album au hasard</h5>
                <p class="card-text d-flex justify-content-start"><span class="badge bg-warning"><small>Artiste ou Album</small>
                  </span></p>
                <p class="card-text">Fiche descriptive de l'artiste ou de l'album au hasard<br/>kzrm klbvl izygmf ul</p>
              </div>
              <div class="card-body d-flex justify-content-end" style="flex:0;">
                <button class="btn btn-primary btn-sm">Je veux en savoir +</button>
              </div>  
            </div>

          </div>
        </div>

    </div>


{% endblock %}
